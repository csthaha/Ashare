{
  "compilerOptions": {
    "outDir": "./",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // 在 TypeScript 中正常导入 Moment 库了。
    "allowSyntheticDefaultImports": true,

    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    // { 
    //   "path": "./tsconfig.node.json" 
    // }, 
    // {
    //   "path": "./tsconfig.app.json"
    // }
  ]
}
